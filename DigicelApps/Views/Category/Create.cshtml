@model CategoryCreationDto
<br />
<br />
@if (ViewBag.error != null)
{
    <h1 class="alert-warning">@ViewBag.error</h1>
}
<br />

<div class="row">
    <div class="col-md-4 col-sm-12">

    </div>
    <div class="col-md-4 col-sm-12">
        <div class="card">
            <br />
            <h1>Crear Categoria</h1>
            <br />
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="col-form-label" asp-for="Name">
                    </label>
                    <input class="form-control" asp-for="Name" type="text" name="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="Description">
                    </label>
                    <input class="form-control" asp-for="Description" type="text" Description="Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>               
                <br />
                <br />
                <button type="submit" class="btn btn-info">Crear</button>
            </form>

        </div>
    </div>
    <div class="col-md-4 col-sm-12">

    </div>

</div>