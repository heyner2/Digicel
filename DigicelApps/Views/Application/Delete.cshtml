@model Application
<br />
<br />
<div class="row">
    <div class="col-md-4 col-sm-12">

    </div>
    <div class="col-md-4 col-sm-12">
        <div class="card">
            <br />
            <h1>Eliminar Aplicación</h1>
            <br />
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="col-form-label" asp-for="Name">
                    </label>
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <input disabled value="@Model.Name" class="form-control" asp-for="Name" type="text" name="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="Description">
                    </label>
                    <input disabled value="@Model.Description" class="form-control" asp-for="Description" type="text" Description="Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="Deparment">
                    </label>
                    <input disabled value="@Model.Deparment" class="form-control" asp-for="Deparment" type="text" Deparment="Deparment" />
                    <span asp-validation-for="Deparment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="Category">
                    </label>
                    @{
                        var category = (List<Category>)ViewBag.categories;
                    }
                    <select disabled class="form-control" name="Category" asp-for="Category">
                        @foreach (var item in category)
                        {
                            if (item.Id == Model.Id)
                            {
                                <option selected value="@item.Id">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }

                        }
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="Owner">
                    </label>
                    <input disabled value="@Model.Owner" class="form-control" asp-for="Owner" type="text" Owner="Owner" />
                    <span asp-validation-for="Owner" class="text-danger"></span>
                </div>
                <br />
                <br />
                <a id="mostrar" class="btn btn-danger" style="color:white; cursor:pointer">Eliminar</a>
                <button id="eliminar" type="submit" class="btn btn-info" style="display: none"></button>
            </form>

        </div>
    </div>
    <div class="col-md-4 col-sm-12">

    </div>

</div>

@section Scripts{ 
    <script>
        var mostrar = document.querySelector("#mostrar");       
        mostrar.addEventListener("click", pressclick);

        function pressclick() {
            if (confirm("Esta seguro de eliminar el registro?")) {
                $("#eliminar").trigger("click");
            }
        }

    </script>

}